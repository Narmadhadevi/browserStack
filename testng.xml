        <!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="BrowserStack Parallel Suite" parallel="tests" thread-count="5">

<test name="Chrome Windows">
    <parameter name="executionMode" value="browserstack"/>
    <parameter name="browser" value="chrome"/>
    <parameter name="os" value="Windows 11"/>
    <classes>
        <class name="elpais.tests.ElPaisPageTest">
            <methods>
                <include name="tc1_popUpHandle" />
                <include name="tc2_verifyElPaisInSpanish" />
            </methods>
        </class>

        <class name="elpais.tests.OpinionPageTest">
            <methods>
                <include name="tc3_clickOnOpinion" />
                <include name="tc4_printFirstFiveTitleAndContent" />
                <include name="tc5_printTranslatedTitleOfFirstFive" />
                <include name="tc6_countAndPrintRepeatedWordsInAllTitles" />
            </methods>
        </class>
    </classes>
</test>

<test name="Edge Windows">
    <parameter name="executionMode" value="browserstack"/>
    <parameter name="browser" value="edge"/>
    <parameter name="os" value="Windows 11"/>
    <classes>
        <class name="elpais.tests.OpinionPageTest"/>
    </classes>
</test>

<test name="Safari Mac">
    <parameter name="executionMode" value="browserstack"/>
    <parameter name="browser" value="safari"/>
    <parameter name="os" value="OS X Monterey"/>
    <classes>
        <class name="elpais.tests.OpinionPageTest"/>
    </classes>
</test>

<test name="iPhone 14">
    <parameter name="executionMode" value="browserstack"/>
    <parameter name="browser" value="safari"/>
    <parameter name="device" value="iPhone 14"/>
    <classes>
        <class name="elpais.tests.OpinionPageTest"/>
    </classes>
</test>

<test name="Pixel 7">
    <parameter name="executionMode" value="browserstack"/>
    <parameter name="browser" value="chrome"/>
    <parameter name="device" value="Google Pixel 7"/>
    <classes>
        <class name="elpais.tests.OpinionPageTest"/>
    </classes>
</test>

</suite>